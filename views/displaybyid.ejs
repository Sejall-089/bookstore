<style>
    .maincontainer {
      height: 100vh;
      width: 100vw;
      background: #c8d6e5;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .box {
      height: auto;
      width: 700px;
      background: white;
      border-radius: 20px;
      padding: 15px;
    }
    .headingdiv {
      padding: 8px;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }
    .centerstyle{
      display: flex;
      justify-content: center;
    }
  </style>
  
  <html>
    <head>
      <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
      <script src="/javascripts/project.js"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
      integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.min.js"
      integrity="sha384-heAjqF+bCxXpCWLa6Zhcp4fu20XoNIA98ecBC1YkdXhszjoejr5y9Q77hIrv8R9i"
      crossorigin="anonymous"
    ></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;300;400;500;700;900&family=Poppins:wght@300&family=Ubuntu&display=swap"
      rel="stylesheet"
    />
  </head>
    <div class="maincontainer">
      <div class="box">
        <div class="headingdiv">
          <div>
          <img src="/images/logo.png" width="40px" height="40px" />
          <span style="
              padding-left: 5px;
              font-size: 20px;
              font-weight: bold;
              font-family: poppins;
              letter-spacing: 1;">Edit Book</span>
              </div>
              <div>
                <a href="/books/fetch_all_bookdetails" text-decoration:none>
                <img src="/images/list.png" width="40px" height="40px" />
              </a>
              </div>
        </div>
        <form action="/books/edit_book_details" method="post" class="row g-3">
            <input type="hidden" value="<%= data.bookid %>" name="bookid">
            <div class="col-md-6">
              <label for="subjectid" class="form-label"><b>Subject</b></label>
              <select name="subjectid" id="subject" class="form-select" aria-label="Default select example">
                <option value="<%= data.subjectid %>"><%= data.subjectname %></option>
              </select>
            </div>
            <div class="col-md-6">
              <label for="titleid" class="form-label"><b>Title</b></label>
              <select name="titleid" id="title" class="form-select" aria-label="Default select example">
                <option value="<%= data.titleid %>"><%= data.title %></option>
              </select>
            </div>
            <div class="col-md-6">
              <label for="author" class="form-label"><b>Author</b></label>
              <input name="author" value="<%= data.author %>" type="text" class="form-control" id="author">
            </div>
            <div class="col-md-6">
              <label for="publisher" class="form-label"><b>Publisher</b></label>
              <input name="publisher" value="<%= data.publisher %>" type="text" class="form-control" id="publisher">
            </div>
            <div class="col-md-6">
              <label for="price" class="form-label"><b>Price</b></label>
              <input name="price" value="<%= data.price %>" type="text" class="form-control" id="price">
            </div>
            <div class="col-md-6">
              <label for="offer" class="form-label"><b>Offer</b></label>
              <input name="offer" value="<%= data.offer %>" type="text" class="form-control" id="offer">
            </div>
            <div class="col-md-12" style="display:flex; flex-direction: column">
              <div><b>Status</b></div>
              <div style="display:flex; flex-direction: row; justify-content: space-evenly">
              <div class="form-check">
                  <input class="form-check-input" type="radio" <%= data.status=="Available"?"checked":"" %> value="Available" name="status" id="status">
                  <label class="form-check-label" for="status">
                    Available
                  </label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" <%= data.status=="Not Available"?"checked":"" %>  value="Not Available" name="status" id="status">
                  <label class="form-check-label" for="status">
                    Not Available
                  </label>
                </div>
              </div>
            </div>
            <div class="col-md-6 centerstyle">
              <button style="width: 60%;" type="submit" name="btn" value="Edit" class="btn btn-primary">Edit</button>
            </div>
            <div class="col-md-6 centerstyle">
              <button style="width: 60%;" type="submit" name="btn" value="Delete" class="btn btn-primary">Delete</button>
            </div>
        </form>
      </div>
    </div>
  </html>
  