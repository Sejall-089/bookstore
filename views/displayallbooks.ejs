<style>
    .maincontainer {
      height: 100vh;
      width: 100vw;
      background: #c8d6e5;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .box {
      height: auto;
      width: 80vw;
      background: white;
      border-radius: 20px;
      padding: 15px;
    }
    .table{
      max-height: 60vh;
      overflow:auto;
      width: 80vw;
    }
    .headingdiv {
      padding: 8px;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }
  </style>

<html>
    <head>
      <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp"
        crossorigin="anonymous"
      />
      <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N"
        crossorigin="anonymous"
      ></script>
      <script
        src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
        integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
        crossorigin="anonymous"
      ></script>
      <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.min.js"
        integrity="sha384-heAjqF+bCxXpCWLa6Zhcp4fu20XoNIA98ecBC1YkdXhszjoejr5y9Q77hIrv8R9i"
        crossorigin="anonymous"
      ></script>
      <link rel="preconnect" href="https://fonts.googleapis.com" />
      <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
      <link
        href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;300;400;500;700;900&family=Poppins:wght@300&family=Ubuntu&display=swap"
        rel="stylesheet"
      />
    </head>
    <div class="maincontainer">
        <div class="box">
            <div class="headingdiv">
                <div>
                <img src="/images/logo.png" width="30px" height="30px" />
                <span style="
                    padding-left: 5px;
                    font-size: 20px;
                    font-weight: bold;
                    font-family: poppins;
                    letter-spacing: 1;">Book List</span>
                    </div>
                    <div>
                        <a href="/books/bookinterface" text-decoration:none>
                    <img src="/images/add.png" width="30px" height="30px" />
                </a>
                    </div>
              </div>
            <table class="table table-striped">
                <thead>
                  <tr>
                    <th scope="col" style="width: 12.5%;">Book Id</th>
                    <th scope="col" style="width: 12.5%;">Subject</th>
                    <th scope="col" style="width: 12.5%;">Title</th>
                    <th scope="col" style="width: 12.5%;">Author<br>Publisher</th>
                    <th scope="col" style="width: 12.5%;">Price<br>Offer</th>
                    <th scope="col" style="width: 12.5%;">Status</th>
                    <th scope="col" style="width: 12.5%;">Poster</th>
                    <th scope="col" style="width: 12.5%;">Edit/Delete</th>
                  </tr>
                </thead>
              </table>
                <div class="table">
                  <table class="table table-striped">
                <tbody>
                    <% data.map((item) => { %>
                  <tr>
                    <th scope="row" style="width: 12.5%;"><%= item.bookid %></th>
                    <td style="width: 12.5%;"><%= item.subjectname %></td>
                    <td style="width: 12.5%;"><%= item.title %></td>
                    <td style="width: 12.5%;"><%= item.author %><br><%= item.publisher %></td>
                    <td style="width: 12.5%;"><s><%= item.price %></s><br><%= item.offer %></td>
                    <td style="width: 12.5%;"><%= item.status %></td>
                    <td style="width: 12.5%;"><a href="/books/displayposter?bookid=<%= item.bookid %>&bookname=<%= item.title %>&poster=<%= item.poster%>"><img src="/images/<%= item.poster %>" style="width: 50px; height: 50px; border-radius: 7px" ></a></td>
                    <td style="width: 12.5%;"><a href="/books/edit_book_data?bookid=<%= item.bookid %>" style="text-decoration: none; font-weight: 700;">Edit/Delete</a></td>
                    </tr>
                    <% }) %>
                </tbody>
              </table>
            </div>
        </div>
    </div>
</html>