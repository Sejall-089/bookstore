    <center>
        <div class="maincontainer">
            <div class="box">
                <form action="/books/edit_poster" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="bookid" value="<%= data.bookid %>">
                    <span style="font-size: 24px; font-weight: 800; font-family: Poppins; letter-spacing: 1;"><%= data.bookname %></span><br><br>
                    <img src="/images/<%=data.poster%>" style="width: 200px; height: 200px;"/><br><br>
                    <b>Upload New Poster</b><br><br>
                    <input name="poster" class="form-control" type="file" id="formFile" style="width: 50%;"><br>
                    <button style="width: 30%;" type="submit" class="btn btn-primary" >Upload Image</button>
                </form>
            </div>
        </div>
        
    </center>
